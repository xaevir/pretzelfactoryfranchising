block content
  h1 Request More Info
  form(role="form" name="requestForm" novalidate rc-submit="sendData(data)" ng-controller="requestFormCtrl")
    .form-group(ng-class="form.classStatus('firstName')")
      input.form-control.input-lg(type="text" name="firstName" placeholder="FIRST NAME" required ng-model="data.firstName")
      .help-block(ng-if="requestForm.firstName.$error.required && (requestForm.firstName.$dirty  || form.submitted)")
        p Please enter your first name

    .form-group(ng-class="form.classStatus('lastName')")
      input.form-control.input-lg(type="text" name="lastName" placeholder="LAST NAME" required ng-model="data.lastName")
      .help-block(ng-if="requestForm.lastName.$invalid && (requestForm.lastName.$dirty  || form.submitted)")
        p Please enter your last name


    .form-group(ng-class="form.classStatus('email')")
      input.form-control.input-lg(type="email", name="email", placeholder="EMAIL", required ng-model="data.email")
      .help-block(ng-if="requestForm.email.$invalid && (requestForm.email.$dirty  || form.submitted)")
        p(ng-show="requestForm.email.$error.required") Please enter an email
        p(ng-show="requestForm.email.$error.email") Please enter a valid email

    .form-group(ng-class="form.classStatus('stateID')")
      select.form-control.input-lg(
        name="stateID" 
        required 
        ng-model="data.stateID" 
        ng-options="state.value as state.name for state in pageElements.states")
        option(value="") Select State
      .help-block(ng-if="requestForm.stateID.$invalid && (requestForm.stateID.$dirty  || form.submitted)")
        p Please select your state 

    button.btn.btn-success.btn-lg.btn-block(type="submit") GET MORE INFO

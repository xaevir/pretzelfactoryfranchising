doctype html 
html(lang="en")
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='shortcut icon', href='/img/favicon.ico')
    - var titleBase =  'Philly Pretzel Factory Franchising'
    if locals.title
      title #{title} - #{titleBase}
    else
      title #{titleBase}
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/js/owl-carousel/owl.carousel.css')
    link(rel='stylesheet', href='/js/owl-carousel/owl.theme.css')
    script(src="/js/jquery.js")
    script(src="/js/owl-carousel/owl.carousel.js")

    block head
  body(id= locals.id ? locals.id : '')
    #notification
    block nav
      include nav
    block content
    //include footer
    script(src="/js/skrollr.min.js")
    script.
      $(document).ready(function() {
        $(".owl-carousel").owlCarousel({singleItem:true});
        var h = $(window).height()
        $('#home-hd').css('height', h);
        var s = skrollr.init();
        $('.moving').css('height', h*3)
        $('.moving').css('margin-top', h+'px')
        $('#steps').css('height', h)
        var w = $(window).width()
        $('#my-container').css('width', w)
        $('#bg-image').css('height', h)

      });


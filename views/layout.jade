doctype html 
html(lang="en")
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='shortcut icon', href='/img/favicon.ico')
    - var titleBase =  'Philly Pretzel Factory Franchising'
    if locals.title
      title #{title} - #{titleBase}
    else
      title #{titleBase}
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/js/owl-carousel/owl.carousel.css')
    link(rel='stylesheet', href='/js/owl-carousel/owl.theme.css')
    script(src="/js/jquery.js")
    script(src="/js/waypoints.min.js")
    script(src="/js/owl-carousel/owl.carousel.js")

    block head
  body(id= locals.id ? locals.id : '')
    #notification
    block nav
      include nav
    block content
    //include footer
    script(src="/js/skrollr.min.js")
    script.
      $(document).ready(function() {
        $('#benefits').waypoint(function(direction) {
          if (direction == 'down')
           $('#scroll-reveal .navbar').addClass('show navbar-fixed-top')
          if (direction == 'up')
            $('#scroll-reveal .navbar').removeClass('show navbar-fixed-top')
        })

        $(".scroll-down").click(function() {
          $('html, body').animate({'scrollTop': $('#request-info').offset().top}, 2000);
        })

      });

